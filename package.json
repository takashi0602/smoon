{
  "name": "smoon",
  "version": "0.0.2",
  "description": "Smoon is a smooth CSS animation library.",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass scss/smoon.scss dist/css/smoon.css",
    "watch-css": "nodemon -e scss -x 'npm run build-css'",
    "minify-css": "cleancss -o dist/css/smoon.min.css dist/css/smoon.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takashi0602/smoon.git"
  },
  "keywords": [
    "css",
    "sass",
    "animation",
    "ui",
    "ux",
    "smooth",
    "moon",
    "Natsume Soseki"
  ],
  "author": "Takashi <takashioicsn@gmail.com> (https://twitter.com/takashimelon)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takashi0602/smoon/issues"
  },
  "homepage": "https://github.com/takashi0602/smoon#readme",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2"
  },
  "files": [
    "dist/css/*.{css,map}",
    "scss/**/*.scss"
  ]
}
